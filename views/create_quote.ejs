<%- include('partials/header', { title: 'Create New Quote' }) %>

<link rel="stylesheet" href="/css/edit_quote.css">

<div class="card" id="create-quote-card" data-gold-gram-nzd="0" data-silver-gram-nzd="0">
    <div class="card-header">
        <h1>Create New Bullion Quote</h1>
    </div>
    <div class="card-body">
        <form action="/quote/create" method="POST" id="create-quote-form">
            <div class="card mb-4">
                <div class="card-header">
                    <h2>Customer Details</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName" class="form-label">First Name:</label>
                            <input type="text" class="form-control" id="firstName" name="customerDetails[firstName]" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="surname" class="form-label">Surname:</label>
                            <input type="text" class="form-control" id="surname" name="customerDetails[surname]" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="mobile" class="form-label">Mobile:</label>
                            <input type="text" class="form-control" id="mobile" name="customerDetails[mobile]" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="email" name="customerDetails[email]">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="zohoId" class="form-label">Zoho ID:</label>
                            <input type="text" class="form-control" id="zohoId" name="customerDetails[zohoId]">
                        </div>
                    </div>
                </div>
            </div>

            <%- include('partials/_items_live_price_section', {
                items: [], 
                quote: { 
                    spot_price_gold_gram_nzd: 0, 
                    spot_price_silver_gram_nzd: 0 
                } 
            }) %>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary" id="create-quote-btn">
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    Create Quote
                </button>
            </div>
        </form>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
    const card = document.getElementById('create-quote-card');
    const form = document.getElementById('create-quote-form');
    const createQuoteBtn = document.getElementById('create-quote-btn');
    const getLivePriceBtn = document.getElementById('get-live-price-btn');
    const errorDiv = document.getElementById('price-error');

    // Handle form submission spinner
    form.addEventListener('submit', () => {
        const spinner = createQuoteBtn.querySelector('.spinner-border');
        createQuoteBtn.disabled = true;
        spinner.classList.remove('d-none');
    });

    getLivePriceBtn.addEventListener('click', async () => {
        const spinner = getLivePriceBtn.querySelector('.spinner-border');

        // Start loading
        getLivePriceBtn.disabled = true;
        spinner.classList.remove('d-none');
        errorDiv.textContent = '';

        try {
            const response = await fetch('/quote/get-live-prices');

            if (!response.ok) {
                throw new Error('Failed to fetch latest prices from the server.');
            }

            const prices = await response.json();

            // Update the data attributes on the card for the items section to use
            card.dataset.goldGramNzd = prices.gold_gram_nzd;
            card.dataset.silverGramNzd = prices.silver_gram_nzd;

            // Update the price display
            document.getElementById('gold-oz-price').textContent = Number(prices.gold_ounce_nzd).toFixed(2);
            document.getElementById('gold-g-price').textContent = Number(prices.gold_gram_nzd).toFixed(2);
            document.getElementById('silver-oz-price').textContent = Number(prices.silver_ounce_nzd).toFixed(2);
            document.getElementById('silver-g-price').textContent = Number(prices.silver_gram_nzd).toFixed(2);
            document.getElementById('last-updated').textContent = new Date().toLocaleString();

            // Trigger a custom event to notify the partial that prices have been updated
            const event = new CustomEvent('pricesUpdated', { 
                detail: {
                    gold_gram_nzd: prices.gold_gram_nzd,
                    silver_gram_nzd: prices.silver_gram_nzd
                }
            });
            document.dispatchEvent(event);

        } catch (error) {
            console.error('Error fetching live prices:', error);
            errorDiv.textContent = 'Error: Could not fetch live prices. Please try again.';
        } finally {
            // End loading
            getLivePriceBtn.disabled = false;
            spinner.classList.add('d-none');
        }
    });
});
</script>

<%- include('partials/footer') %>
