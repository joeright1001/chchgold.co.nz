<%- include('partials/header', { title: 'Create New Quote' }) %>

<div class="card">
    <div class="card-header">
        <h1>Create New Bullion Quote</h1>
    </div>
    <div class="card-body">
        <form action="/quote/create" method="POST">
            <div class="card mb-4">
                <div class="card-header">
                    <h2>Customer Details</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName" class="form-label">First Name:</label>
                            <input type="text" class="form-control" id="firstName" name="customerDetails[firstName]" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="surname" class="form-label">Surname:</label>
                            <input type="text" class="form-control" id="surname" name="customerDetails[surname]" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="mobile" class="form-label">Mobile:</label>
                            <input type="text" class="form-control" id="mobile" name="customerDetails[mobile]" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="email" name="customerDetails[email]">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="zohoId" class="form-label">Zoho ID:</label>
                            <input type="text" class="form-control" id="zohoId" name="customerDetails[zohoId]">
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2>Items</h2>
                </div>
                <div class="card-body">
                    <% for(let i = 0; i < 8; i++) { %>
                        <div class="row align-items-center mb-3 p-2 border rounded">
                            <h5 class="col-12 mb-2">Item <%= i + 1 %></h5>
                            <div class="col-md-3">
                                <label for="itemName<%= i %>" class="form-label">Item Name:</label>
                                <input type="text" class="form-control" id="itemName<%= i %>" name="items[<%= i %>][name]">
                            </div>
                            <div class="col-md-3">
                                <label for="metalType<%= i %>" class="form-label">Metal Type:</label>
                                <select class="form-select" id="metalType<%= i %>" name="items[<%= i %>][metalType]">
                                    <option value="Gold">Gold</option>
                                    <option value="Silver">Silver</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="percent<%= i %>" class="form-label">Percent (%):</label>
                                <input type="number" class="form-control" id="percent<%= i %>" name="items[<%= i %>][percent]" step="0.01">
                            </div>
                            <div class="col-md-3">
                                <label for="weight<%= i %>" class="form-label">Weight (g):</label>
                                <input type="number" class="form-control" id="weight<%= i %>" name="items[<%= i %>][weight]" step="0.01">
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Get Live Price & Create Quote</button>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer') %>
