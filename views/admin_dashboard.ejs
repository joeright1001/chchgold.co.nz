<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-T">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
</head>
<body>
    <h1>Admin Dashboard - All Quotes</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Quote Number</th>
                <th>Customer Name</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% quotes.forEach(quote => { %>
                <tr>
                    <td><%= quote.quote_number %></td>
                    <td><%= quote.customer_first_name %> <%= quote.customer_surname %></td>
                    <td><%= new Date(quote.created_at).toLocaleString() %></td>
                    <td>
                        <a href="/staff/quote/edit/<%= quote.id %>">Edit (In-Person)</a> |
                        <a href="/admin/<%= quote.id %>">Admin View</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
